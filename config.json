{
    "name": "hier 100 single node emb",
    "wandb": true,
    "n_gpu": 1,
    "device": 2,
    "hparam": {
        "class_num": 5
    },
    "arch": {
        "type": "Graph_Baseline",
        "args":{
            "skill_num": 7446,
            "embed_dim": 32,
            "skill_embed_dim": 32,
            "class_num": 5,
            "nhead": 4,
            "nhid": 16,
            "nlayers": 3,
            "dropout": 0.2,
            "sample_node_num": 50,
            "hyperdecode": true,
            "model": "static"
            }
    },
    "data_loader": {
        "type": "SkillDataLoader",
        "args":{
            "data_dir": "/data/wchao/data/skill_inflow_outflow/",
            "dataset": "it",
            "graph_dir": "/data/wchao/data/graph_list/",
            "skill_num": 16956,
            "subgraph_num": 16956,
            "max_length": 18,
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.25,
            "class_num": 5,
            "min_length": 5,
            
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-2,
            "weight_decay": 1e-5,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy_metric", "f1_metric", "aucroc_metric"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 300,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 60,

        "tensorboard": false
    }
}
